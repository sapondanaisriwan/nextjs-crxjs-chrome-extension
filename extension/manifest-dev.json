{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "`Next.js & CRXJS Chrome Extension",
  "description": "A chrome extension boilerplate using Next.js for building products and CRXJS for development.  ",
  "permissions": ["storage"],
  "background": { "service_worker": "src/background/background.js" },
  "action": {
    "default_title": "Next.js & CRXJS Chrome Extension",
    "default_icon": "public/images/icon-32.png",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "public/images/icon-16.png",
    "32": "public/images/icon-32.png",
    "48": "public/images/icon-48.png",
    "64": "public/images/icon-64.png",
    "128": "public/images/icon-128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://www.youtube.com/*"],
      "js": ["src/content-scripts/main.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["**/*", "*"],
      "use_dynamic_url": true
    }
  ]
}
